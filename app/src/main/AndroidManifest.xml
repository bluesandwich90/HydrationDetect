<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.junchaowang.hydrationdetect">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".personal_information"
            android:label="@string/title_activity_personal_information"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".HydrationStatus"
            android:label="@string/title_activity_hydration_status"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".daily_record"
            android:label="@string/title_activity_daily_record"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".weekly_record"
            android:label="@string/title_activity_weekly_record"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".monthly_record"
            android:label="@string/title_activity_monthly_record"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>